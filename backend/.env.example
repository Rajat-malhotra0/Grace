# Backend environment configuration for Grace
# Copy this file to .env and provide real values before running in production.

# Server configuration
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/Grace

# Authentication
JWT_SECRET=change-me
JWT_EXPIRES_IN=12h

# Application URLs
APP_BASE_URL=http://localhost:3001
FRONTEND_BASE_URL=http://localhost:3000

# Email (Gmail App Password recommended)
GMAIL_USER=
GMAIL_APP_PASS=
EMAIL_FROM=Grace <no-reply@grace.org>

# Cloudinary media storage
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Razorpay payments
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Gemini / Google GenAI
GEMINI_API_KEY=

# Vector store
QDRANT_URL=
QDRANT_API_KEY=

# Optional telemetry / logging
LOG_LEVEL=info
